{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.synesthetic.dev/0.7.4/synesthetic-asset.schema.json",
  "type": "object",
  "required": [
    "asset_id",
    "prompt",
    "timestamp",
    "shader",
    "tone",
    "haptic",
    "control",
    "modulations",
    "rule_bundle",
    "meta_info",
    "parameter_index"
  ],
  "properties": {
    "$schema": {"type": "string"},
    "asset_id": {"type": "string"},
    "prompt": {"type": "string"},
    "timestamp": {"type": "string"},
    "seed": {"type": ["integer", "null"]},
    "shader": {"type": "object"},
    "tone": {"type": "object"},
    "haptic": {"type": "object"},
    "control": {"type": "object"},
    "modulations": {"type": "array"},
    "rule_bundle": {"type": "object"},
    "meta_info": {"type": "object"},
    "parameter_index": {"type": "array", "items": {"type": "string"}}
  },
  "additionalProperties": true
}

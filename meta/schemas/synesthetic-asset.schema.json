{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://synesthetic-labs.example/schemas/synesthetic-asset.schema.json",
  "title": "SynestheticAsset",
  "type": "object",
  "required": [
    "$schemaRef",
    "asset_id",
    "prompt",
    "timestamp",
    "shader",
    "tone",
    "haptic",
    "control",
    "modulations",
    "rule_bundle",
    "meta_info",
    "parameter_index",
    "provenance"
  ],
  "properties": {
    "$schemaRef": {
      "type": "string"
    },
    "asset_id": {
      "type": "string"
    },
    "prompt": {
      "type": "string",
      "minLength": 1
    },
    "seed": {
      "type": ["integer", "null"]
    },
    "timestamp": {
      "type": "string"
    },
    "shader": {
      "$ref": "#/definitions/componentWithInputs"
    },
    "tone": {
      "$ref": "#/definitions/componentWithInputs"
    },
    "haptic": {
      "$ref": "#/definitions/componentWithInputs"
    },
    "control": {
      "$ref": "#/definitions/controlSection"
    },
    "modulations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/modulation"
      }
    },
    "rule_bundle": {
      "$ref": "#/definitions/ruleBundle"
    },
    "meta_info": {
      "$ref": "#/definitions/metaInfo"
    },
    "parameter_index": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "provenance": {
      "$ref": "#/definitions/assetProvenance"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "inputParameter": {
      "type": "object",
      "required": ["parameter"],
      "properties": {
        "parameter": {"type": "string"}
      },
      "additionalProperties": true
    },
    "componentWithInputs": {
      "type": "object",
      "required": ["input_parameters"],
      "properties": {
        "input_parameters": {
          "type": "array",
          "items": {"$ref": "#/definitions/inputParameter"}
        }
      },
      "additionalProperties": true
    },
    "controlParameter": {
      "type": "object",
      "required": ["parameter", "label", "unit", "combo"],
      "properties": {
        "id": {"type": "string"},
        "parameter": {"type": "string"},
        "label": {"type": "string"},
        "unit": {"type": "string"},
        "sensitivity": {"type": ["number", "null"]},
        "combo": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "device": {"type": ["string", "null"]},
              "control": {"type": ["string", "null"]}
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "controlSection": {
      "type": "object",
      "required": ["control_parameters"],
      "properties": {
        "control_parameters": {
          "type": "array",
          "items": {"$ref": "#/definitions/controlParameter"},
          "minItems": 1
        }
      },
      "additionalProperties": true
    },
    "modulation": {
      "type": "object",
      "properties": {
        "id": {"type": ["string", "null"]},
        "target": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    },
    "ruleBundle": {
      "type": "object",
      "required": ["name", "rules", "meta_info"],
      "properties": {
        "name": {"type": "string"},
        "description": {"type": ["string", "null"]},
        "rules": {
          "type": "array",
          "items": {"type": "object"}
        },
        "meta_info": {
          "type": "object",
          "properties": {
            "version": {"type": ["string", "null"]}
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "metaInfo": {
      "type": "object",
      "required": ["title", "description", "category", "complexity", "tags", "provenance"],
      "properties": {
        "title": {"type": "string"},
        "description": {"type": "string"},
        "category": {"type": "string"},
        "complexity": {"type": "string"},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        },
        "provenance": {"$ref": "#/definitions/metaProvenance"}
      },
      "additionalProperties": true
    },
    "metaProvenance": {
      "type": "object",
      "required": ["engine", "endpoint", "model", "parameters", "trace_id", "mode", "timestamp", "response_hash"],
      "properties": {
        "engine": {"type": "string"},
        "endpoint": {"type": ["string", "null"]},
        "model": {"type": ["string", "null"]},
        "parameters": {"type": "object"},
        "trace_id": {"type": "string"},
        "mode": {"type": "string"},
        "timestamp": {"type": "string"},
        "response_hash": {"type": ["string", "null"]}
      },
      "additionalProperties": true
    },
    "assetProvenance": {
      "type": "object",
      "required": ["agent", "version", "generator"],
      "properties": {
        "agent": {"type": "string"},
        "version": {"type": "string"},
        "seed": {"type": ["integer", "null"]},
        "assembled_at": {"type": "string"},
        "generator": {
          "type": "object",
          "properties": {
            "trace_id": {"type": ["string", "null"]},
            "mode": {"type": ["string", "null"]},
            "engine": {"type": ["string", "null"]},
            "endpoint": {"type": ["string", "null"]}
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}

{
  "task": "Audit synesthetic-labs repo state (v0.1 Generator + Critic)",
  "objective": "Report current implementation, tests, and docs against docs/labs_spec.md and export findings to AGENTS.md and meta/output/labs_state.md.",
  "constraints": {
    "style": "Deterministic, concise Markdown with required sections",
    "rules": [
      "Ground findings in committed code/tests/docs",
      "Mark missing functionality explicitly",
      "Highlight divergences only when behaviour differs from the spec",
      "Limit recommendations to actionable follow-up work"
    ],
    "sections": [
      "Summary of repo state",
      "Top gaps & fixes",
      "Alignment with labs_spec.md",
      "Test coverage",
      "Dependencies and runtime",
      "Environment variables",
      "Documentation accuracy",
      "Detected divergences",
      "Recommendations"
    ]
  },
  "scope": {
    "files": [
      "README.md",
      "docs/labs_spec.md",
      "requirements.txt",
      "labs/*.py",
      "tests/*.py",
      "meta/*",
      ".github/workflows/*"
    ]
  },
  "output": {
    "paths": [
      "meta/output/labs_state.md",
      "AGENTS.md"
    ],
    "format": "Markdown"
  },
  "exit_criteria": [
    "Summary, tables, and recommendations populated",
    "Dependencies mapped to usage",
    "Environment section documents required variables",
    "README cross-checked against docs/labs_spec.md"
  ]
}
